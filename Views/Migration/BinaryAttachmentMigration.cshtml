@{
    ViewData["Title"] = "Binary Attachment Migration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            border: none;
            margin-bottom: 20px;
        }

        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px 15px 0 0 !important;
            padding: 20px;
        }

        .card-header h3 {
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .btn-start {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border: none;
            padding: 12px 30px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 8px;
            color: white;
            transition: all 0.3s ease;
        }

        .btn-start:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4);
        }

        .btn-refresh {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            border: none;
            padding: 12px 30px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 8px;
            color: white;
        }

        .status-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 15px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .status-card:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-queued {
            background: #e0e7ff;
            color: #4f46e5;
        }

        .status-running {
            background: #dbeafe;
            color: #2563eb;
            animation: pulse 2s infinite;
        }

        .status-completed {
            background: #d1fae5;
            color: #059669;
        }

        .status-failed {
            background: #fee2e2;
            color: #dc2626;
        }

        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }

        .progress-custom {
            height: 30px;
            background: #e5e7eb;
            border-radius: 15px;
            overflow: hidden;
        }

        .progress-bar-custom {
            background: linear-gradient(90deg, #10b981 0%, #059669 100%);
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            transition: width 0.5s ease;
        }

        .metric-box {
            background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
            padding: 15px;
            border-radius: 10px;
            text-align: center;
            margin: 10px 0;
        }

        .metric-value {
            font-size: 32px;
            font-weight: 700;
            color: #0369a1;
            margin: 5px 0;
        }

        .metric-label {
            font-size: 14px;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #94a3b8;
        }

        .empty-state i {
            font-size: 64px;
            margin-bottom: 20px;
        }

        .job-detail {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #e5e7eb;
        }

        .job-detail:last-child {
            border-bottom: none;
        }

        .job-detail-label {
            font-weight: 600;
            color: #475569;
        }

        .job-detail-value {
            color: #64748b;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>
                    <i class="fas fa-file-archive"></i>
                    Binary Attachment Migration Service
                </h3>
                <p class="mb-0 mt-2">Migrate large binary attachments (PRATTACHMENTDATA) in the background</p>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <button class="btn btn-start w-100" onclick="startBinaryMigration()">
                            <i class="fas fa-play-circle"></i> Start PR Attachment Binary Migration
                        </button>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-refresh w-100" onclick="refreshAllStatuses()">
                            <i class="fas fa-sync-alt"></i> Refresh All Statuses
                        </button>
                    </div>
                </div>

                <div id="currentJobSection" style="display: none;">
                    <h5 class="mb-3"><i class="fas fa-tasks"></i> Current Job</h5>
                    <div id="currentJobCard" class="status-card">
                        <!-- Current job details will be inserted here -->
                    </div>
                </div>

                <h5 class="mb-3"><i class="fas fa-history"></i> All Jobs</h5>
                <div id="allJobsContainer">
                    <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <p>No binary migration jobs found. Click "Start PR Attachment Binary Migration" to begin.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>
                    <i class="fas fa-info-circle"></i>
                    How It Works
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center p-3">
                            <i class="fas fa-database fa-3x text-primary mb-3"></i>
                            <h5>Step 1: Metadata First</h5>
                            <p class="text-muted">Run the regular PR Attachment migration to migrate metadata (file names, paths, IDs)</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center p-3">
                            <i class="fas fa-file-upload fa-3x text-success mb-3"></i>
                            <h5>Step 2: Start Binary Service</h5>
                            <p class="text-muted">Click the button above to start migrating the actual binary file data in the background</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center p-3">
                            <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                            <h5>Step 3: Monitor Progress</h5>
                            <p class="text-muted">Track the migration progress in real-time. Large files are handled efficiently in batches</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentJobId = null;
        let refreshInterval = null;

        function startBinaryMigration() {
            if (confirm('Start binary attachment migration?\n\nThis will migrate all binary attachments (PRATTACHMENTDATA) from SQL Server to PostgreSQL in the background.')) {
                fetch('/api/BinaryAttachmentMigration/start-prattachment', {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        currentJobId = data.jobId;
                        alert(`Binary migration started successfully!\n\nJob ID: ${data.jobId}\nMigration ID: ${data.migrationId}`);
                        
                        // Start auto-refresh
                        if (refreshInterval) clearInterval(refreshInterval);
                        refreshInterval = setInterval(refreshAllStatuses, 3000); // Refresh every 3 seconds
                        
                        refreshAllStatuses();
                    } else {
                        alert('Failed to start migration: ' + data.error);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error starting migration: ' + error.message);
                });
            }
        }

        function refreshAllStatuses() {
            fetch('/api/BinaryAttachmentMigration/status/all')
                .then(response => response.json())
                .then(data => {
                    if (data.jobs && data.jobs.length > 0) {
                        displayAllJobs(data.jobs);
                        
                        // Check if current job is still running
                        if (currentJobId) {
                            const currentJob = data.jobs.find(j => j.jobId === currentJobId);
                            if (currentJob) {
                                displayCurrentJob(currentJob);
                                
                                // Stop auto-refresh if job is completed or failed
                                if (currentJob.state === 'Completed' || currentJob.state === 'Failed') {
                                    if (refreshInterval) {
                                        clearInterval(refreshInterval);
                                        refreshInterval = null;
                                    }
                                }
                            }
                        }
                    }
                })
                .catch(error => {
                    console.error('Error fetching statuses:', error);
                });
        }

        function displayCurrentJob(job) {
            const section = document.getElementById('currentJobSection');
            const card = document.getElementById('currentJobCard');
            
            section.style.display = 'block';
            
            const statusClass = `status-${job.state.toLowerCase()}`;
            const progressPercent = job.progressPercentage || 0;
            
            card.innerHTML = `
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0"><i class="fas fa-file-archive"></i> ${job.tableName}</h5>
                    <span class="status-badge ${statusClass}">${job.state}</span>
                </div>
                
                <div class="progress-custom mb-3">
                    <div class="progress-bar-custom" style="width: ${progressPercent}%">
                        ${progressPercent}%
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-3">
                        <div class="metric-box">
                            <div class="metric-value">${job.totalFiles.toLocaleString()}</div>
                            <div class="metric-label">Total Files</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="metric-box">
                            <div class="metric-value">${job.processedFiles.toLocaleString()}</div>
                            <div class="metric-label">Processed</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="metric-box">
                            <div class="metric-value">${job.skippedFiles.toLocaleString()}</div>
                            <div class="metric-label">Skipped</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="metric-box">
                            <div class="metric-value">${job.elapsedTime}</div>
                            <div class="metric-label">Elapsed Time</div>
                        </div>
                    </div>
                </div>
                
                ${job.currentOperation ? `<div class="alert alert-info mt-3 mb-0"><i class="fas fa-info-circle"></i> ${job.currentOperation}</div>` : ''}
                ${job.errorMessage ? `<div class="alert alert-danger mt-3 mb-0"><i class="fas fa-exclamation-triangle"></i> ${job.errorMessage}</div>` : ''}
            `;
        }

        function displayAllJobs(jobs) {
            const container = document.getElementById('allJobsContainer');
            
            if (jobs.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <p>No binary migration jobs found.</p>
                    </div>
                `;
                return;
            }
            
            // Sort jobs by date (newest first)
            jobs.sort((a, b) => new Date(b.enqueuedAt) - new Date(a.enqueuedAt));
            
            container.innerHTML = jobs.map(job => {
                const statusClass = `status-${job.state.toLowerCase()}`;
                const progressPercent = job.progressPercentage || 0;
                
                return `
                    <div class="status-card">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h6 class="mb-1"><i class="fas fa-file-archive"></i> ${job.tableName}</h6>
                                <small class="text-muted">Job ID: ${job.jobId}</small>
                            </div>
                            <span class="status-badge ${statusClass}">${job.state}</span>
                        </div>
                        
                        <div class="progress-custom mb-3">
                            <div class="progress-bar-custom" style="width: ${progressPercent}%">
                                ${progressPercent}%
                            </div>
                        </div>
                        
                        <div class="job-detail">
                            <span class="job-detail-label">Files:</span>
                            <span class="job-detail-value">${job.processedFiles.toLocaleString()} / ${job.totalFiles.toLocaleString()} (${job.skippedFiles} skipped)</span>
                        </div>
                        
                        <div class="job-detail">
                            <span class="job-detail-label">Elapsed Time:</span>
                            <span class="job-detail-value">${job.elapsedTime}</span>
                        </div>
                        
                        <div class="job-detail">
                            <span class="job-detail-label">Started:</span>
                            <span class="job-detail-value">${job.startedAt ? new Date(job.startedAt).toLocaleString() : 'N/A'}</span>
                        </div>
                        
                        ${job.completedAt ? `
                        <div class="job-detail">
                            <span class="job-detail-label">Completed:</span>
                            <span class="job-detail-value">${new Date(job.completedAt).toLocaleString()}</span>
                        </div>
                        ` : ''}
                        
                        ${job.currentOperation ? `<div class="alert alert-info mt-2 mb-0 py-2"><small><i class="fas fa-info-circle"></i> ${job.currentOperation}</small></div>` : ''}
                        ${job.errorMessage ? `<div class="alert alert-danger mt-2 mb-0 py-2"><small><i class="fas fa-exclamation-triangle"></i> ${job.errorMessage}</small></div>` : ''}
                    </div>
                `;
            }).join('');
        }

        // Load statuses on page load
        window.onload = function() {
            refreshAllStatuses();
        };
    </script>
</body>
</html>
